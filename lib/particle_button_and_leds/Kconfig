menuconfig PARTICLE_LIBRARY
	bool "Button and LED Library for Nordic DKs"
	select GPIO

if PARTICLE_LIBRARY

config PARTICLE_LIBRARY_BUTTON_SCAN_INTERVAL
	int "Scanning interval of buttons in milliseconds"
	default 10

config PARTICLE_LIBRARY_INVERT_BUTTONS
	bool "Invert buttons pins on DK"
	default y

config PARTICLE_LIBRARY_INVERT_LEDS
	bool "Invert LED pins on DK"
	default y

config PARTICLE_LIBRARY_DYNAMIC_BUTTON_HANDLERS
	bool "Enable the runtime assignable button handler API"
	default y

module = PARTICLE_LIBRARY
module-str = PARTICLE library
source "${ZEPHYR_BASE}/subsys/logging/Kconfig.template.log_config"

endif # PARTICLE_LIBRARY
